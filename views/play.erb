<link rel="stylesheet"type="text/css"href="/style.css"/>

<div align=center >
  <h1><%="#{@game.player1.name} vs. #{@game.player2.name}"%></h1>
  <h2><%="#{@game.player2.name}'s hit points: #{@game.player2.hp}"%></h2>
  <h2><%="#{@game.player1.name}'s hit points: #{@game.player1.hp}"%></h2>

  <form class="plays" action="/attacked" method="post">
    <input type="submit" value="<%="Attack #{@game.players.last.name}"%>" >
  </form>

  <form class="plays" action="/switch" method="post">
    <input type="submit" value="Switch attacker" >
  </form>
</div>
